<div class="page-header">
  <h1>Editions</h1>
</div>

<div class="list-group editions">
<% @editions.each do |edition| %>
  <a href="<%= edition_projects_url(edition) %>" class="list-group-item">
      <h4 class="text-primary">
        <% if edition.active? %>

          <span class="label label-danger">Active now</span>
        <% end %>
        <%= edition.title %>
      </h4>
      <p>
        Projects: <span class="badge"><%= edition.projects.count %></span>
      </p>
      <p>
        Regristration starts at: <%= edition.registration_start_date %>
      </p>
      <p>
        Event starts at: <%= edition.start_date %>
      </p>
      <p>
        Finished at: <%= edition.end_date %>
      </p>
  </a>
<% end %>
</div>
